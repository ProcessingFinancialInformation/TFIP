<div>
    <div class="form-group">
        <label class="radio-inline">
            <input type="radio" ng-model="clientInput.clientType" ng-value="clientTypes.individualClient" name="clientType" /> Физическое лицо
        </label>
        <label class="radio-inline">
            <input type="radio" ng-model="clientInput.clientType" ng-value="clientTypes.juridicalPerson" name="clientType" /> Юридическое лицо
        </label>
    </div>
    <div class="form-group">
        <label for="clientId">Введите номер клиента</label>
        <input type="text" class="form-control" id="clientId" ng-model="clientInput.clientId">
    </div>
    <button type="submit" class="btn btn-default" ng-click="getClient()">Отправить</button>
</div>
