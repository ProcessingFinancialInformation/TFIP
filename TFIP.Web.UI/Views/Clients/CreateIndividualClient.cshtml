
@{
    ViewBag.Title = "Добление клиента";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="CreateClientConroller" ng-form="createClientForm">
    

    <div class="form-horizontal">
        
        <h4>Данные о клиенте</h4>

        <div text-field-input name="'lastName'" label-text="'Фамилия'" model="clientViewModel.lastName"></div>
        <div text-field-input name="'firstName'" label-text="'Имя'" model="clientViewModel.firstName"></div>
        <div text-field-input name="'patronymic'" label-text="'Отчество'" model="clientViewModel.patronymic"></div>
        <div date-field-input name="'dateOfBirth'" label-text="'Дата рождения'" model="clientViewModel.dateOfBirth"></div>
        <div text-field-input name="'placeOfBirth'" label-text="'Место рождения'" model="clientViewModel.placeOfBirth"></div>
        <div select-field-input name="'gender'" label-text="'Пол'" model="clientViewModel.gender" model-values="genders"></div>
        
        <h4>Паспортные данные</h4>

        <div text-field-input name="'nationality'" label-text="'Гражданство'" model="clientViewModel.nationality"></div>
        <div text-field-input name="'passportNo'" label-text="'Номер паспорта'" model="clientViewModel.passportNo"></div>
        <div text-field-input name="'identificationNo'" label-text="'Идентификационный номер'" model="clientViewModel.identificationNo"></div>
        <div text-field-input name="'authority'" label-text="'Выдан'" model="clientViewModel.authority"></div>
        <div date-field-input name="'dateOfIssue'" label-text="'Дата выдачи'" model="clientViewModel.dateOfIssue"></div>
        <div date-field-input name="'dateOfExpiry'" label-text="'Срок выдачи'" model="clientViewModel.dateOfExpiry"></div>
        
        <h4>Сведения о регистрации</h4>
        
        <div select-field-input name="'countryId'" label-text="'Страна'" model="clientViewModel.nationality" model-values="countries"></div>
        <div text-field-input name="'registrationRegion'" label-text="'Область'" model="clientViewModel.registrationRegion"></div>
        <div text-field-input name="'registrationCity'" label-text="'Город'" model="clientViewModel.registrationCity"></div>
        <div text-field-input name="'registrationStreet'" label-text="'Улица'" model="clientViewModel.registrationStreet"></div>
        <div text-field-input name="'houseNo'" label-text="'Дом'" model="clientViewModel.houseNo"></div>
        <div text-field-input name="'flatNo'" label-text="'Квартира'" model="clientViewModel.flatNo"></div>
        <div date-field-input name="'registrationDate'" label-text="'Дата регистрации'" model="clientViewModel.registrationDate"></div>
        
        <h4>Контактные данные</h4>

        <div text-field-input name="'contactEmail'" label-text="'Почтовый ящик'" model="clientViewModel.contactEmail"></div>
        <div text-field-input name="'contactPhone'" label-text="'Телефон'" model="clientViewModel.contactPhone"></div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" ng-click="createUser()">Создать</button>
            </div>
        </div>
    </div>
</div>

