<div class="row">
    <p class="pull-left">Остаток основного долга</p>
    <p class="pull-right" ng-bind="balanceInfo.mainDebtBalance"></p>
</div>
<div class="row">
    <p class="pull-left">Необходимая сумма выплаты</p>
    <p class="pull-right" ng-bind="balanceInfo.currentMonthFee"></p>
</div>
<div ng-form="makePaymentForm" class="form-horizontal">
    <div numeric-field-input name="'amount'" label-text="'Введите сумму платежа'" model="paymentViewModel.amount" is-required="true" min-value="{{balanceInfo.currentMonthFee}}" max-value="{{maxPayment(}}"></div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" ng-click="makePayment()">Отправить</button>
        </div>
    </div>
</div>