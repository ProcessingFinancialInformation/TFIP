<div class="form-group" ng-form="fieldInputForm"
     ng-class="{'has-error': fieldInputForm.fieldInput.$error.required && fieldInputForm.fieldInput.$dirty}">
    <label for="{{name}}" class="col-sm-2 col-xs-3 control-label">{{labelText}}</label>
    <div class="col-sm-10 col-xs-9">
        <p class="input-group">
            <input type="text"
                   name="fieldInput"
                   class="form-control"
                   uib-datepicker-popup="dd-MMMM-yyyy"
                   ng-model="inputModel"
                   is-open="isOpened"
                   close-text="Close"
                   ng-required="isRequired"
                   style=""
                   id="{{name}}"
                   min-date="minDate"
                   max-date="maxDate">
            <span class="input-group-btn">
                <button type="button" class="btn btn-default" ng-click="isOpened = !isOpened"><i class="glyphicon glyphicon-calendar"></i></button>
            </span>
        </p>
    </div>
</div>
