<div class="form-group"
     ng-form="fieldInputForm"
     ng-class="{'has-error': (fieldInputForm.fieldInput.$error.required || fieldInputForm.fieldInput.$error.min || fieldInputForm.fieldInput.$error.max) && fieldInputForm.fieldInput.$dirty}">

    <label for="{{name}}" class="col-sm-2 col-xs-3 control-label">{{labelText}}</label>
    <div class="col-sm-10 col-xs-9">
        <input type="number"
               ng-model="model"
               class="form-control"
               id="{{name}}"
               name="fieldInput"
               placeholder="{{labelText}}"
               required
               min="{{minValue}}"
               max="{{maxValue}}"
               ng-disabled="isDisabled">
    </div>

</div>
