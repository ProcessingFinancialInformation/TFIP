<div class="form-group" ng-form="fieldInputForm"
     ng-class="{'has-error': fieldInputForm.fieldInput.$error.required && fieldInputForm.fieldInput.$dirty}">
    <label for="{{name}}" class="col-sm-2 control-label">{{labelText}}</label>
    <div class="col-sm-10">
        <select ng-options="modelValue.id as modelValue.value for modelValue in modelValues"
                ng-model="model"
                class="form-control"
                id="{{name}}"
                name="fieldInput"
                ng-required="isRequired"
                ng-disabled="isDisabled">
            <option value="">Выберите опцию</option>
        </select>
    </div>
</div>
